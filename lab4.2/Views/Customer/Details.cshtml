@model lab4.Models.Customer

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Thông tin chi tiết</h2>

<div>
    <h4>Customer</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Mã khách hàng</dt>
        <dd>@Html.DisplayFor(model => model.CustomerID)</dd>
        <dt>Họ và tên</dt>
        <dd>@Html.DisplayFor(model => model.FullName)</dd>
        <dt>Địa chỉ</dt>
        <dd>@Html.DisplayFor(model => model.Address)</dd>
        <dt>Email</dt>
        <dd>@Html.DisplayFor(model => model.Email)</dd>
        <dt>Điện thoại</dt>
        <dd>@Html.DisplayFor(model => model.Phone)</dd>
        <dt>Số dư</dt>
        <dd>@Html.DisplayFor(model => model.Balance)</dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Sửa", "Edit", new { id = Model.CustomerID }) |
    @Html.ActionLink("Quay lại", "GetCustomers")
</p>
